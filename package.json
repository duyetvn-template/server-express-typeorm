{
	"name": "base-express-typeorm",
	"version": "1.0.0",
	"description": "",
	"author": "duyetvn",
	"main": "app.ts",
	"nodemonConfig": {
		"ignore": [
			"**/*.test.ts",
			"**/*.spec.ts",
			".git",
			"node_modules"
		],
		"watch": [
			"src"
		],
		"exec": "node -r tsconfig-paths/register -r ts-node/register src/main.ts",
		"ext": "ts, js"
	},
	"scripts": {
		"start": "nodemon",
		"start:pro": "node dist/main.js",
		"build": "tsc -p src/main.ts",
		"typeorm2": "ts-node ./node_modules/typeorm/cli -f ./src/database/orm.config.ts",
		"typeorm": "ts-node ./node_modules/typeorm/cli -f ./migration-config.json",
		"migration:generate": "./node_modules/.bin/typeorm migration:generate -f ./src/database/orm.config.ts -n T",
		"migration:create": "npx typeorm migration:create ./src/database/migrations/${name}",
		"migration:run": "npx typeorm migration:run"
	},
	"license": "ISC",
	"dependencies": {
		"bcrypt": "^5.1.0",
		"class-validator": "^0.14.0",
		"cors": "^2.8.5",
		"express": "^4.18.2",
		"helmet": "^7.0.0",
		"jsonwebtoken": "^9.0.1",
		"morgan": "^1.10.0",
		"mysql2": "^3.5.1",
		"typeorm": "^0.3.17"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/morgan": "^1.9.4",
		"@types/node": "^20.4.2",
		"nodemon": "^3.0.1",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.6"
	}
}
